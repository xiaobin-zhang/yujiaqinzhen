<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-3.0.xsd">

	<bean id = "simpleReader" class="com.yjqz.binge.batch.xml.job001.Job01ItemReader"></bean>
	<bean id = "simpleProcessor" class="com.yjqz.binge.batch.xml.job001.Job01ItemProcess"></bean>
	<bean id = "simpleWriter" class="com.yjqz.binge.batch.xml.job001.Job01ItemWriter"></bean>
	
	<batch:flow id="simple-flow-001" abstract="true">
		<batch:step id="step-001">
			<batch:tasklet>
				<batch:chunk reader="simpleReader" processor="simpleProcessor" writer="simpleWriter" commit-interval="2"></batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:flow>
	
</beans>
